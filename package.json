{
  "name": "mehmood-agricultural-platform-complete",
  "version": "1.0.0",
  "description": "Complete Agricultural Platform - Production Ready",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "server:dev": "cd server && npm run dev",
    "client:dev": "cd client && npm start",
    "build": "cd client && npm run build",
    "server:start": "cd server && npm start",
    "install:all": "npm install && cd server && npm install && cd ../client && npm install",
    "test": "cd server && npm test && cd ../client && npm test",
    "docker:build": "docker build -t agricultural-platform .",
    "docker:run": "docker run -p 3000:3000 -p 5000:5000 agricultural-platform"
  },
  "keywords": [
    "agriculture",
    "farming",
    "crop-management",
    "weather",
    "analytics",
    "production-ready"
  ],
  "author": "Moaz Mahmood",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}